<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="QuemenClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-left')]" position="inside">
            <div class="client-detail">
                <span class="label">Regimen fiscal</span>
                <select class="detail client-address-country needsclick" name="l10n_mx_edi_fiscal_regime"
                        t-on-change="captureChange">
                    <option value="">None</option>
                    <t t-foreach="env.pos.regimenes_fiscales" t-as="l10n_mx_edi_fiscal_regime" t-key="l10n_mx_edi_fiscal_regime.id">
                        <option t-att-value="l10n_mx_edi_fiscal_regime.id"
                                t-att-selected="props.partner.country_id ? ((l10n_mx_edi_fiscal_regime.id === props.partner.country_id[0]) ? true : undefined) : undefined">
                            <t t-esc="l10n_mx_edi_fiscal_regime.name" />
                        </option>
                    </t>
                </select>
            </div>
        </xpath>
    </t>

</templates>
