<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="QuemenClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-left')]" position="inside">
            <div class="client-detail">
                <span class="label">Regimen fiscal</span>
                <select class="detail client-address-country needsclick" name="regimen_id"
                        t-on-change="captureChange">
                    <option value="">None</option>
                    <t t-foreach="env.pos.regimenes_fiscales" t-as="regimen_id" t-key="regimen_id.id">
                        <option t-att-value="regimen_id.id"
                                t-att-selected="props.partner.country_id ? ((regimen_id.id === props.partner.country_id[0]) ? true : undefined) : undefined">
                            <t t-esc="regimen_id.name" />
                        </option>
                    </t>
                </select>
            </div>    
        </xpath>
    </t>

</templates>
