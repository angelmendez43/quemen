    <t t-name="PedidoEspecialPopup" owl="1">
        <div role="dialog" class="modal-dialog">
        <Draggable>
            <div class="popup popup-confirm">
                <header class="title drag-handle">
                    <t t-esc="props.title" />
                </header>
                <div class="selection scrollable-y">
                    <table id="CuotasTabla" style="width:100%">
                      <tr>
                        <td></td>
                      </tr>
                      <tr style="height:70px">
                        <td></td>
                        <td align="left">
                          Fecha de entrega:
                        </td>
                        <td colspan="3" align="left">
                          <input
                            required="1"
                            type="date"
                            id="meeting-time"
                            name="meeting-time"
                            style="font-size:80%; width:90%;"/>

                        </td>
                        <td></td>
                      </tr>
                      <tr style="height:70px">
                        <td></td>
                        <td align="left">
                          Hora de entrega:
                        </td>
                        <td colspan="3" align="left">
                          <input
                            required="1"
                            type="time"
                            id="field_time"
                            name="field_time"
                            style="font-size:80%; width:90%;"
                            />

                        </td>
                        <td></td>
                      </tr>
                      <tr>
                        <td></td>
                      </tr>

                      <tr rowspan="6" style="height:100px; Word-break:break-all;">
                        <td></td>
                        <td align="left">Observaciones: </td>
                        <td align="left"><textarea id="observaciones_id" required="True" style="font-size:80%; width:90%; height:130px; Word-break:break-all;"></textarea></td>
                        <td></td>
                      </tr>

                      <tr>
                        <td></td>
                      </tr>

                      <tr style="height:70px;">
                        <td></td>
                        <td align="left">Sucursal de entrega: </td>
                        <td align="left"><input id="entrega_id" style="font-size:80%; width:90%;"></input></td>
                        <td></td>
                      </tr>

                      <tr style="height:70px;">
                        <td></td>
                        <td align="left">Autoriz√≥: </td>
                        <td align="left"><input required="required" id="autorizo_id" style="font-size:80%; width:90%;"></input></td>
                        <td></td>
                      </tr>
                    </table>
                </div>
                <footer class="footer">
                    <div class="button confirm" t-on-click="confirm">
                        <t t-esc="props.confirmText" />
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        <t t-esc="props.cancelText" />
                    </div>
                </footer>
            </div>
        </Draggable>
        </div>    
    </t>

</templates>