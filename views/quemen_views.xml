            <record id="view_quemen_promociones_form" model="ir.ui.view">
                <field name="name">quemen.promociones.form</field>
                <field name="model">quemen.promociones</field>
                <field name="arch" type="xml">
                    <form string="Promociones">

                        <sheet>
                            <div class="oe_title">
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </div>
                            <group>
                                <group>
                                    <field name="fecha_inicio"/>
                                    <field name="fecha_fin"/>
                                </group>
                                <group>
                                  <field name="combos_ids">
                                      <tree string="Combos" editable="bottom">
                                          <field name="producto_id"/>
                                          <field name="cantidad"/>
                                          <field name="porcentaje_descuento"/>
                                          <field name="productos_promocion_ids" widget="many2many_tags"/>
                                      </tree>
                                  </field>
                                  <field name="dosporuno_ids">
                                      <tree string="2x1" editable="bottom">
                                          <field name="producto_id"/>
                                          <field name="productos_promocion_ids" widget="many2many_tags"/>
                                      </tree>
                                  </field>
                                </group>
                            </group>

                        </sheet>
                    </form>
                </field>
            </record>

            <record id="view_quemen_op_lote_form" model="ir.ui.view">
                <field name="name">quemen.op_lote.form</field>
                <field name="model">quemen.op_lote</field>
                <field name="arch" type="xml">
                    <form string="Lote">
                        <header>
                            <button name="confirm_lot" string="Confirmar" class="oe_highlight" type="object" states="borrador" />
                            <field name="state" widget="statusbar" statusbar_visible="boraddor,confirmado" />
                        </header>
                        <sheet>
                            <div class="oe_title">
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </div>
                            <group>
                                <group>
                                    <field name="date" attrs="{'readonly': [('state','=','confirmado')]}"/>
                                    <field name="date_mrp_production" attrs="{'readonly': [('state','=','confirmado')]}"/>
                                    <field name="reference" attrs="{'readonly': [('state','=','confirmado')]}"/>
                                </group>

                                  <field name="product_ids" attrs="{'readonly': [('state','=','confirmado')]}">
                                      <tree string="Productos" editable="bottom">
                                          <field name="product_id"/>
                                          <field name="quantity"/>
                                          <field name="elaboration_date"/>
                                          <field name="lot_id" readonly="True"/>
                                      </tree>
                                  </field>

                            </group>

                        </sheet>
                    </form>
                </field>
            </record>

            <record id="view_quemen_op_loter_tree" model="ir.ui.view">
