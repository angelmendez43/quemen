            <record id="view_quemen_retiros_tree" model="ir.ui.view">
                <field name="name">quemen.retiros.tree</field>
                <field name="model">quemen.retiros</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Retiros POS">
                        <field name="name"/>
                        <field name="session_id"/>
                        <field name="fecha_hora"/>
                        <field name="usuario_id"/>
                        <field name="motivo"/>
                        <field name="total"/>
                    </tree>
                </field>
            </record>

            <record id="view_quemen_retiros_form" model="ir.ui.view">
                <field name="name">quemen.retiros.form</field>
                <field name="model">quemen.retiros</field>
                <field name="arch" type="xml">
                    <form string="Retiros">
                        <header>
                            <button name="validar_retiro" string="Validar" states="borrador" type="object" class="oe_highlight" data-hotkey="g"/>
                            <field name="state" widget="statusbar" statusbar_visible="borrador,validado" readonly="1"/>

                        </header>
                        <sheet>
                            <div class="oe_title">
                                <h1>
                                    <field name="name" readonly="1"/>
                                </h1>
                            </div>
                            <group>
                                <group>
                                    <field name="motivo" required="True"/>
                                    <field name="usuario_id" required="True"/>
                                    <field name="cash_box_id" required="True"/>
                                </group>
                                <group>
                                    <field name="fecha_hora"/>
                                    <field name="efectivo_ids">
                                        <tree string="Costo unitario" editable="bottom" create="1">
                                            <field name="cantidad"/>
                                            <field name="moneda_billete_id"/>
                                            <field name="retiro_id"  invisible="True"/>
                                        </tree>
                                    </field>    
                                    <field name="total" readonly="1"/>
                                </group>
                            </group>

                        </sheet>
                    </form>
                </field>
            </record>

