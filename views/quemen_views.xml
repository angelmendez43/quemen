        <record id="view_quemen_op_lote_form" model="ir.ui.view">
            <field name="name">quemen.op_lote.form</field>
            <field name="model">quemen.op_lote</field>
            <field name="arch" type="xml">
                <form string="Ordenes de producción por lote">
                    <header>
                        <button name="boton_confirmar" string="Confirmar" states="borrador" class="oe_highlight" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="borrador,confirmado"/>
                    </header>
                    <sheet>
                      <div class="oe_title">
                          <label for="name" string="Orden producción Lote"/>
                          <h1>
                              <field name="name"/>
                          </h1>
                      </div>
                        <group>
                            <field name="fecha"/>
                        </group>
                        <group>
                            <field name="producto_ids">
                                <tree editable="bottom">
                                    <field name="producto_id"/>
                                    <field name="cantidad"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="o_attachment_preview"/>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

