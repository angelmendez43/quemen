<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record model="ir.ui.view" id="quemen_view_picking_type_form">
            <field name="name">Quemen Operation Types</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
                <field name="warehouse_id" position="after">
                    <field name="tipo_operacion_caducidad_id"/>
                    <!-- <field name="porciones"/> -->
                    <field name="tipo_operacion_porcion_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_stock_quant_tree_editable_quemen">
            <field name="name">stock.quant.tree.editable.quemen</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
            <field name="arch" type="xml">
                <field name="product_id" position="before">
                    <field name="referencia_interna"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="quemen_stock_move_line_detailed_operation_tree">
            <field name="name">stock.move.line.detailded.operation.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <field name="product_id" position="before">
                    <field name="barcode"/>
                </field>
            </field>
        </record>

        <record id="quemen_view_stock_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="groups_id" eval="[(6, 0, [ref('quemen.quemen_tiendas') ])]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_dest_id']" position="attributes">
                    <attribute name="domain">[('name','in',['Entrada'])]</attribute>
                </xpath>
            </field>
        </record>

</odoo>
