        />
        <record id="action_report_delivery_quemen" model="ir.actions.report">
            <field name="name">Transferencia ticket</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">quemen.report_deliveryslip_t</field>
            <field name="report_file">quemen.report_deliveryslip_t</field>
            <field name="print_report_name">'Transferencia ticket'</field>
            <field name="binding_model_id" ref="model_stock_picking"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="quemen.paperformat_ticket"/>
