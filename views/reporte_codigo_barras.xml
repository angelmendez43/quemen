<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_codigo_barras">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <t>
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-8">
                                <t t-set="fecha" t-value="fecha_barras(o)"/>
                                <table class="table table-condensed" style="border-bottom: 0px solid white !important;width: 3in;">
                                    <!-- <tr>
                                      <th style="text-align: center;">
                                        <span t-field="o.product_id.display_name"/>
                                      </th>
                                    </tr> -->
                                    <tr>
                                        <td colspan="2" style="text-align: center; vertical-align: middle;" class="col-5">
                                            <img t-if="o.product_id.name" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.product_id.barcode, 600, 150)" style="width:100%;height:20%;"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="text-align: center;height:1cm">
                                            <span t-field="o.product_id.barcode"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="text-align: center;">
                                            <span t-field="o.product_id.display_name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: center;">
                                            ELAB.<br/>
                                            <span t-esc="fecha['elab']"/>
                                        </td>
                                        <td style="text-align: center;">
                                            CAD.<br/>
                                            <span t-esc="fecha['cad']"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
